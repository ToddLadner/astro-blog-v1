---
import Head from '@layouts/Head.astro';
import TheHeader from '@components/TheHeader.astro';
import TheFooter from '@components/TheFooter.astro';

interface Props {
	title: string;
}

const {
  title = "My Astro Blog",
  description = "My musings about the Astro framework",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head {title} {description} />
	<body>
		<TheHeader/>
			<slot/>
		<TheFooter/>
	</body>
</html>

<!-- Global styles -->
<style is:global>
  /* main {
    padding-block: var(--space-lg);
  } */
</style>

<!-- Scoped by default -->
<style>
	body {
		display: grid;
		grid-template-rows: auto 1fr auto;
	}
</style>
